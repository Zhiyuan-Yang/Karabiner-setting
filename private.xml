<?xml version="1.0"?>
<root>
  <appdef>
    <appname>SAFARI</appname>
    <equal>com.apple.Safari</equal>
  </appdef>
  <appdef>
    <appname>MAIL</appname>
    <equal>com.apple.mail</equal>
  </appdef>
  <appdef>
    <appname>INTELLIJ</appname>
    <equal>com.jetbrains.intellij.ce</equal>
  </appdef>
  <appdef>
    <appname>ITERM2</appname>
    <equal>com.googlecode.iterm2</equal>
  </appdef>
  <appdef>
    <appname>XMIND</appname>
    <equal>org.xmind.cathy.application</equal>
  </appdef>

  <item>
    <name>Corsair K70 LUXrmedia key fix</name>
    <identifier>private.k70_media_key_fix</identifier>
    <autogen>__KeyToKey__ ConsumerKeyCode::MUSIC_PREV_18, ConsumerKeyCode::MUSIC_PREV</autogen>
    <autogen>__KeyToKey__ ConsumerKeyCode::MUSIC_NEXT_17, ConsumerKeyCode::MUSIC_NEXT</autogen>
  </item>

  <item>
    <name>NumLock as NeteaseMusic like</name>
    <identifier>private.numlock_neteasemusic_like</identifier>
    <autogen>__KeyToKey__ KeyCode::PC_KEYPAD_NUMLOCK, KeyCode::L, ModifierFlag::SHIFT_L | ModifierFlag::CONTROL_L | ModifierFlag::COMMAND_L | ModifierFlag::OPTION_L</autogen>
  </item>

  <item>
    <name>Tenkey shortcut for Safari</name>
    <identifier>private.tenkey_safari</identifier>
    <only>SAFARI</only>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_9, KeyCode::BRACKET_RIGHT, ModifierFlag::COMMAND_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_7, KeyCode::BRACKET_LEFT, ModifierFlag::COMMAND_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_4, KeyCode::TAB, ModifierFlag::CONTROL_L | ModifierFlag::SHIFT_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_6, KeyCode::TAB, ModifierFlag::CONTROL_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_5, KeyCode::R, ModifierFlag::COMMAND_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_2, KeyCode::W, ModifierFlag::COMMAND_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_8, KeyCode::T, ModifierFlag::COMMAND_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_0, KeyCode::Z, ModifierFlag::COMMAND_L</autogen>
  </item>

  <item>
    <name>Tenkey shortcut for Mail app</name>
    <identifier>private.tenkey_mail</identifier>
    <only>MAIL</only>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_5, KeyCode::U, ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_8, KeyCode::CURSOR_UP</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_2, KeyCode::CURSOR_DOWN</autogen>
    <autogen>__KeyToKey__ KeyCode::ENTER, KeyCode::W, ModifierFlag::COMMAND_L</autogen>
  </item>

  <item>
    <name>Tenkey shortcut for Intellij</name>
    <identifier>private.tenkey_intellij</identifier>
    <only>INTELLIJ</only>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_PLUS, KeyCode::B, ModifierFlag::COMMAND_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_4, KeyCode::CURSOR_LEFT, ModifierFlag::COMMAND_L | ModifierFlag::OPTION_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_6, KeyCode::CURSOR_RIGHT, ModifierFlag::COMMAND_L | ModifierFlag::OPTION_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_5, KeyCode::F6</autogen>
  </item>

  <item>
    <name>Tenkey shortcut for iTerm2</name>
    <identifier>private.tenkey_iterm2</identifier>
    <only>ITERM2</only>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_6, KeyCode::BRACKET_RIGHT, ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_4, KeyCode::BRACKET_LEFT, ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_2, KeyCode::W, ModifierFlag::COMMAND_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_8, KeyCode::T, ModifierFlag::COMMAND_L</autogen>
  </item>

  <item>
    <name>Tenkey shortcut for XMind</name>
    <identifier>private.tenkey_xmind</identifier>
    <only>XMIND</only>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_6, KeyCode::F6</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_4, KeyCode::F6, ModifierFlag::SHIFT_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_7, KeyCode::1, ModifierFlag::COMMAND_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_8, KeyCode::2, ModifierFlag::COMMAND_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_9, KeyCode::3, ModifierFlag::COMMAND_L</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_0, KeyCode::4, ModifierFlag::COMMAND_L</autogen>
  </item>
</root>
